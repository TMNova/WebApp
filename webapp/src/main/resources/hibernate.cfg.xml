<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/person_db</property>
        <property name="hibernate.connection.username">timur</property>
        <property name="hibernate.connection.password"></property>
        <property name="show_sql">true</property>

        <mapping class="ru.lanit.repository.entity.PersonEntity" />
        <mapping class="ru.lanit.repository.entity.AddressEntity" />

    </session-factory>
</hibernate-configuration>